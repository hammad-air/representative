<section class="cart py-16">
  <% if(session.cart) {%>
  <div class="order container mx-auto w-1/2">
    <div class="flex items-center border-b bprder-gray-300 pb-4">
      <img src="/img/cart-black.png" alt="" />
      <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
    </div>
    <div class="pizza-list">
      <% for(let pizza of Object.values(session.cart.items)) {%>
      <div class="flex items-center my-8">
        <img class="w-24" src="/img/<%= pizza.item.image %>" alt="" />
        <div class="flex-1 ml-4">
          <h1><%= pizza.item.name %></h1>
          <span><%= pizza.item.size %></span>
        </div>
        <span class="flex-1"><%= pizza.qty %></span>
        <span class="font-bold text-lg"
          >$ <%= pizza.item.price * pizza.qty %></span
        >
      </div>
      <% } %>
    </div>
    <hr />
    <div class="text-right py-4">
      <div>
        <span class="text-lg font-bold">Total Amount</span>
        <span class="amount text-2xl font-bold ml-2"
          >$<%= session.cart.totalPrice %></span
        >
      </div>
      <div>
        <form class="mt-12" action="">
          <input
            type="text"
            class="border border-gray-400 p-2 w-1/2 mb-4"
            placeholder="Phone Number"
          />
          <input
            type="text"
            class="border border-gray-400 p-2 w-1/2"
            placeholder="Address"
          />
          <div>
            <button
              class="btn-primary py-2 px-6 mt-6 rounded-full text-white font-bold"
              type="submit"
            >
              Order Now
            </button>
          </div>
        </form>
      </div>
      <!-- <a href="/" class="inline-block cursor-pointer btn-primary py-2 px-6 mt-6 rounded-full
             text-white font-bold ">Login to Continue</a> -->
    </div>
  </div>
  <% } else { %>
  <div class="empty-cart py-6">
    <div class="container mx-auto text-center">
      <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ¤¸</h1>
      <p class="text-gray-800 text-lg mb-12">
        consequatur recusandae dolorem possimus corrupti <br />
        tenetur accusantium quae maiores quam animi.
      </p>
      <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart" />
      <a
        href="/"
        class="inline-block px-6 py-2 px-6 rounded-full text-white font-bold mt-4 mt-12 btn-primary"
        >Go Back</a
      >
    </div>
  </div>
  <% } %>
</section>
